
    // nvim.kdl
    //
    // This layout starts a new Zellij session with a single tab named "Editor".
    // This tab contains two panes:
    // 1. A main pane that immediately runs `nvim .` and is focused by default.
    // 2. A small, borderless pane at the bottom for your custom status bar plugin.

    layout {
        // Defines a specific tab to open on startup.
        tab name="Editor" focus=true {
            // The main pane, which will take up the majority of the space.
            // It's configured to launch Neovim in the current directory.
            // `focus=true` ensures the cursor is active here when the session starts.
            pane command="nvim" focus=true {
                args ".";
            }
            
            // This pane is for the status bar plugin.
            // It's borderless and has a fixed size of 1 line.
            pane size=1 borderless=true {
                plugin location="file:~/.config/zellij/plugins/zjstatus.wasm" {
                    format_left   "{mode} #[fg=#89B4FA,bold]{session}"
                    format_center "{tabs}"
                    format_right  "{command_git_branch} {datetime}"
                    format_space  ""

                    border_enabled  "false"
                    border_char     "─"
                    border_format   "#[fg=#6C7086]{char}"
                    border_position "bottom"

                    hide_frame_for_single_pane "true"

                    mode_normal  "#[bg=red]    "
                    mode_locked  "#[bg=blue]    "
                    mode_tmux    "#[bg=#ffc387]    "

                    tab_normal   "#[fg=#6C7086] {name} "
                    tab_active   "#[fg=#9399B2,bold,italic] {name} "

                    datetime          "#[fg=#6C7086,bold] {format} "
                    datetime_format   "%A, %d %b %Y %_I:%M %p"
                    datetime_timezone "America/New_York"
                }
            }
        }
    }

